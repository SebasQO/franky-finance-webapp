@model IEnumerable<FrankyFinance.Models.Usuario>

@{
    ViewBag.Title = "Listado de Usuarios";
}

<h2>Usuarios</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Nombre</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
